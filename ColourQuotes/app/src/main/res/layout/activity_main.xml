<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-autor"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_no_margin"
    android:paddingLeft="@dimen/activity_no_margin"
    android:paddingRight="@dimen/activity_no_margin"
    android:paddingTop="@dimen/activity_no_margin"
    tools:context="com.example.cliente.colourquotes.MainActivity">

    <TextView
        android:text="Cita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/citaTextView"
        android:fontFamily="sans-serif-light"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/padding_default"
        android:textStyle="italic"/>

    <TextView
        android:text="Autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autorTextView"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintRight_toRightOf="@+id/citaTextView"
        app:layout_constraintTop_toBottomOf="@+id/citaTextView"
        android:padding="@dimen/padding_default"/>

    <Button
        android:text="NUEVA CITA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nuevaCitaButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light"
        tools:layout_constraintLeft_creator="1"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

    <Button
        android:text="NUEVO EVENTO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nuevoButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light"
        android:onClick="nuevoEvento"/>
</android.support.constraint.ConstraintLayout>
